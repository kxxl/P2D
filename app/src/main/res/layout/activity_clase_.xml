<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    tools:context="com.example.android.p2d.Clase_Activity"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgClaseActivity"
                android:layout_width="232dp"
                android:layout_height="247dp"
                android:background="#2d2d2d"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/txtTituloClaseActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TItuloClase"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtEstiloClaseActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estilo"
                android:background="#edecec"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txtHorarioClaseActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:padding="2dp"
                android:text="Horario" />

            <TextView
                android:id="@+id/txtDescClaseActivity"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"/>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
